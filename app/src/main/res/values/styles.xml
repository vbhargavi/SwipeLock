<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppLockScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="Theme.TransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="LockButtonStyle">
        <item name="android:layout_width">@dimen/lock_btn_size</item>
        <item name="android:layout_height">@dimen/lock_btn_size</item>
        <item name="android:background">@drawable/transparent_circular_selector</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
